@model WeDevelop.Models.Sherbime

@{
    ViewBag.Title = "DetajeSherbimesh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading" style="font-size: 41px;
    text-align: center;
    font-style: italic;
    color: #000033;margin-top: 22px;">@Model.Emri</div>


    @if (Session["Errori"] != null)
    {
        <div id="error" style=" margin-top: 20px;font-size: 22px;margin-left: 50px;color: red;font-weight: 700;">
            @Session["Errori"].ToString()
            @{Session["Errori"] = null;}
        </div>
    }

    <div class="panel-body" style="margin-top: 50px;">
        <div class="col-sm-3 col-md-7" style="color:blue">
            <img src="~/Content/Sherbimet/@Model.Imazh" style="width:90%   ;height: 350px; margin-left: 56px;"

            <hr />
            <hr />
            <h2>
                <div id="sherbim" style="color:black; margin-top:20px;">
                    <b> Detajet: </b>
                </div>
            </h2>

            <h3 style="font-size: 20px;margin-top: 21px;"> Pershkrimi:</h3>
            <div id="sherbim" style="color: #002233;margin-bottom: 43px; margin-top: 20px; width: 600px; font-size:20px;font-family: serif;">@Model.Pershkrimi</div>
            <hr />
            <h3 style="font-size: 20px;"> Cfare kerkojme ne nga ju!</h3>
            <div id="sherbim" style="color: #002233;margin-bottom: 43px; margin-top: 20px; width: 400px;  font-size: 20px;font-family: cursive;">@Model.CfareKerkojme</div>
            <hr />
            <h3 style="font-size: 20px;"> Cfare merrni ju nga ne!</h3>
            <div id="sherbim" style="color: #002233;margin-bottom: 43px; margin-top: 20px; width: 550px;font-size: 20px;font-family: cursive;">@Model.CfareJapim</div>
            <hr />

        </div>





       
        <div class="col-sm-9 col-md-5">

            @if (Request.IsAuthenticated)
            {
                <div class="card" style="width: 38rem;height: 20rem; margin-bottom: 58px;margin-left: 49px; ">
                    <div class="card-body">
                        <h5 class="card-title" style="font-size: 52px;font-weight: 700;">@Convert.ToInt32(Model.Cmimi) All</h5>
                        <h2 class="card-text"> Vetem per @Model.Ditet dite</h2>
                        <hr />
                        @Html.ActionLink("Bli Sherbimin", "BliSherbimin", "Home", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-primary", @style = "margin-left: 28px; margin-top: 11px;height: 43px;width: 301px;font-size: 23px; font-weight: 700;" })

                    </div>
                </div>
            }
            else
            {

                <div class="card" style="width: 38rem;height: 20rem; margin-bottom: 58px;margin-left: 49px; ">
                    <div class="card-body">
                        <h5 class="card-title" style="font-size: 52px;font-weight: 700;">@Convert.ToInt32(Model.Cmimi) All</h5>
                        <h2 class="card-text"> Vetem per @Model.Ditet dite</h2>
                        <hr />
                        <button type="button" style="margin-left: 28px; margin-top: 11px;height: 43px;width: 301px;font-size: 23px; font-weight: 700;" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                            Bli Sherbimin
                        </button>
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document" style="position: absolute;top: 31%;left: 31%;">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">
                                            <img src="~/Content/images/images-removebg-preview.png" style="width: 95px;margin-left: 185px;" />
                                        </h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body" style="font-size: 20px;text-align: center;">
                                        Ju duhet te logoheni per te aksesuar veprimin e kerkuar!
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal" style="width: 55px;font-size: 14px;">Mbyll</button>
                                     <a href="@Url.Action("Login", "Account")" class="btn btn-success" style= "font-size: 15px;width: 50px;height: 30px; " > Log In </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
                <hr />

                <div>

                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Modifiko", "ModifikoSherbime", "Admin", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-info", @style = "width: 171px;height: 47px;font-size: 24px;font-weight: 700;margin-left: 30px; margin-top: 202px;" })
                        @Html.ActionLink("Fshi", "FshiSherbime", "Admin", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-danger", @style = "width: 171px;height: 47px;font-size: 24px;font-weight: 700;margin-left: 30px;margin-top: 202px;" })
                    }

                    else

                        if (Request.IsAuthenticated)
                    {
                        @Html.ActionLink("E preferuar", "ShtoKarte", "Karte", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-success btn-lg", @style = "width: 171px;height: 47px;font-size: 24px;font-weight: 700;margin-left: 30px; margin-top: 202px;" })
                        @Html.ActionLink("Te tjera", "Sherbime", "Home", new { @class = "btn btn-info btn-lg", @style = "width: 171px;height: 47px;font-size: 24px;font-weight: 700;margin-left: 30px;margin-top: 202px;" })


                    }
                    else
                    {

                        <button type="button" style = "width: 171px;height: 47px;font-size: 24px;font-weight: 700;margin-left: 30px; margin-top: 202px;" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">
                            E Preferuar
                        </button>
                     
                        @Html.ActionLink("Te tjera", "Sherbime", "Home", new { @class = "btn btn-info btn-lg", @style = "width: 171px;height: 47px;font-size: 24px;font-weight: 700;margin-left: 30px;margin-top: 202px;" })
                    }
                </div>
                <hr />
            </div>

    </div>

    <div class="row" style="margin-top:18px; background-color: beige;margin-bottom: 41px;"> <h2 style="font-family: inherit;margin-left: 582px;font-size: 33px;"> SUGJERIME </h2> </div>
    <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>

        </ol>
        <div class="carousel-inner">


            <div class="carousel-item active">
               
                @foreach (var item in ViewBag.Sugjerimet)

                {
                    if (item.Id != Model.Id)
                    {

                    
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body">
                                <a href="@Url.Action("DetajeSherbimesh", "Home", new { id = item.Id })">
                                    <img src="~/Content/Sherbimet/@item.Imazh" class="card-img-top">
                                </a>
                                <h4 class="card-title" style="font-size: 27px;font-weight: 700;">@item.Emri </h4>
                                <p class="card-text"> @Convert.ToInt32(item.Cmimi) </p>
                            </div>
                        </div>
                    </div>
                    }
                }


            </div>
            <div class="carousel-item">

                @foreach (var item in ViewBag.Sugjerimet)
                {
                    if (item.Id != Model.Id)
                    {

                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body">
                                <a href="@Url.Action("DetajeSherbimesh", "Home", new { id = item.Id })">
                                    <img src="~/Content/Sherbimet/@item.Imazh" class="card-img-top">
                                </a>
                                <h4 class="card-title" style="font-size: 27px;font-weight: 700;">@item.Emri </h4>
                                <p class="card-text">@Convert.ToInt32(item.Cmimi)</p>
                            </div>
                        </div>
                    </div>
                    }
                }

            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>





</div>
