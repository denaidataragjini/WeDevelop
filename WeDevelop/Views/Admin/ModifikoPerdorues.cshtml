@model WeDevelop.Models.ApplicationUser
@{
    ViewBag.Title = "ModifikoPerdorues";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ModifikoPerdorues</h2>

<div class="main-container">
    <div class="pd-ltr-20">
        <div class="card-box pd-20 height-100-p mb-30">
            <div class="container">
                <div class="row">
                    <div class="col-md-12" style="text-align:center; margin-bottom:20px;"> Modifiko Perdoruesin - <b>@Model.UserName </b><hr /></div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @using (Html.BeginForm("ModifikoPerdorues", "Admin", FormMethod.Post, htmlAttributes: new { @class = "form" }))
                        {
                            <div style="margin-bottom:10px;">
                                @Html.LabelFor(m => m.UserName, htmlAttributes: new { @class = "label-control" })
                                @Html.TextBoxFor(m => m.UserName, htmlAttributes: new { @class = "form-control" })
                            </div>
                            <div style="margin-bottom:10px;">
                                @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "label-control" })
                                @Html.TextBoxFor(m => m.Email, new { @readonly = "readonly", @class = "form-control" })
                            </div>
                            <div style="margin-bottom:10px;">
                                @Html.ValidationMessageFor(m => m.PhoneNumber)
                                @Html.LabelFor(m => m.PhoneNumber, htmlAttributes: new { @class = "label-control" })
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                            </div>
                            @*<div style="margin-left:10px;">
                                    <input type="checkbox" name="SelectedRole" value="Admin" class="checkbox-inline" />
                                    @Html.Label("Admin", new { @class = "control-label" })
                                    <input type="checkbox" name="SelectedRole" value="User" checked class="checkbox-inline" />
                                    @Html.Label("User", new { @class = "control-label" })
                                </div>*@
                            <div class="form-group">
                                @Html.ActionLink("Anulo", "Perdorues", null, htmlAttributes: new { @class = "btn btn-outline-danger", style = "margin:15px;" })
                                <input type="submit" value="Ruaj" class="btn btn-outline-success" style="margin:15px;" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}