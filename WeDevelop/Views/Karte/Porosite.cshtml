

@{
    ViewBag.Title = "Porosite";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<WeDevelop.Models.Karta>



@if (Model == null)
{
    <div class="row" style="margin-left: 100px;font-size: 27px;font-weight: 800;margin-bottom: 30px;margin-top: 50px;">
        Ju akoma nuk keni nje Sherbim te preferuar!
    </div>
}

else
{
    <div class="row" style="margin-left: 100px;font-size: 27px;font-weight: 800;margin-bottom: 30px;margin-top: 50px;">
        Sherbimet po na presin ti perfundojme!Zgjidh te preferuarin dhe le te fillojme punen!
    </div>
    foreach (var cart in Model)
    {<div class="col-md-3">
            <div class="card" style=" width: 28rem;margin-top: 50px; margin-left: 12px; margin-bottom: 12px; ">
                <div class="inner">
                    <a href="@Url.Action("DetajeSherbimesh", "Home", new { id = cart.sherbimId})">
                        <img src="~/Content/Sherbimet/@cart.Sherbime.Imazh" width="250" height="250" class="card-img-top">
                    </a>
                </div>
                <div class="card-body">
                    <p class="card-text" style="color:black;font-size:21px;">@Convert.ToInt32(cart.Sherbime.Cmimi) All&nbsp;&nbsp;•@cart.Sherbime.Ditet dite </p>
                    <h5 class="card-title" style="color:black;font-size:21px;">@Html.DisplayFor(modelItem => cart.Sherbime.Emri)</h5>
                    <hr />
                    @Html.ActionLink("Nuk e preferoj", "FshiKart", new { id = cart.sherbimId }, new { @class = "btn btn-danger", @style = "width: 228px; height: 32px; font-size: 16px; " })
                </div>

            </div>

        </div>

    }

}

